<section class="simple-section">
  {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
  {% endif %}

  <div class="simple-text">
    {{ section.settings.text }}
  </div>
</section>

{% schema %}
{
  "name": "Section simple",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Bienvenue"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Texte",
      "default": "Ceci est une section simple."
    }
  ],
  "presets": [
    {
      "name": "Section simple"
    }
  ]
}
{% endschema %}