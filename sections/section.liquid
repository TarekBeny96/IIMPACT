<div class="video-carousel-Tarek" data-section-id="{{ section.id }}">
  <div class="container-ceralyne">
    {% if section.settings.title != blank %}
      <h2 class="title-ceralyne">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="carousel-box">
      <button class="btn-prev" onclick="scrollCarousel('{{ section.id }}', 'prev')">
        <svg width="10" height="16" viewBox="0 0 10 16" fill="none">
          <path d="M8 2L2 8L8 14" stroke="currentColor" stroke-width="2"/>
        </svg>
      </button>
      
      <div class="carousel-track" id="track-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="video-item" {{ block.shopify_attributes }}>
            {% if block.settings.video != blank %}
              <video muted loop playsinline preload="metadata" 
                     data-index="{{ forloop.index0 }}" 
                     data-section="{{ section.id }}">
                <source src="{{ block.settings.video }}" type="video/mp4">
              </video>
            {% elsif block.settings.video_url != blank %}
              <video muted loop playsinline preload="metadata"
                     data-index="{{ forloop.index0 }}" 
                     data-section="{{ section.id }}">
                <source src="{{ block.settings.video_url }}" type="video/mp4">
              </video>
            {% else %}
              <div class="video-empty">
                <svg width="50" height="50" viewBox="0 0 50 50">
                  <circle cx="25" cy="25" r="23" fill="#ddd"/>
                  <path d="M20 15L35 25L20 35V15Z" fill="#999"/>
                </svg>
              </div>
            {% endif %}
            
            <div class="video-layer" onclick="openModal('{{ section.id }}', {{ forloop.index0 }})">
              <button class="btn-play"></button>
            </div>
          </div>
        {% endfor %}
      </div>

      <button class="btn-next" onclick="scrollCarousel('{{ section.id }}', 'next')">
        <svg width="10" height="16" viewBox="0 0 10 16" fill="none">
          <path d="M2 2L8 8L2 14" stroke="currentColor" stroke-width="2"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="video-modal-ceralyne" id="modal-{{ section.id }}" data-section="{{ section.id }}">
  <div class="modal-box">
    <button class="btn-close" onclick="closeModal('{{ section.id }}')">Ã—</button>
    <video class="modal-player" id="player-{{ section.id }}" controls playsinline>
      <source src="" type="video/mp4">
    </video>
  </div>
</div>

<style>
  /* SECTION PRINCIPALE */
  .video-carousel-ceralyne {
    padding: 80px 0;
    background: {{ section.settings.background_color }};
  }

  .container-ceralyne {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .title-ceralyne {
    text-align: center;
    font-size: 24px;
    font-weight: 300;
    margin-bottom: 25px;
    color: {{ section.settings.title_color }};
    font-family: {{ section.settings.title_font.family }}, sans-serif;
  }

  .carousel-box {
    position: relative;
    overflow: hidden;
    padding: 0 45px;
  }

  .carousel-track {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 8px 0;
  }

  .carousel-track::-webkit-scrollbar {
    display: none;
  }

  /* VIDÃ‰OS DESKTOP */
  .video-item {
    min-width: 280px;
    max-width: 280px;
    height: 420px;
    border-radius: 14px;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    flex-shrink: 0;
    box-shadow: 0 4px 15px rgba(0,0,0,0.12);
    transition: all 0.3s ease;
  }

  .video-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.18);
  }

  .video-item video,
  .video-empty {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-layer {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
  }

  .video-item:hover .video-layer {
    background: rgba(0,0,0,0.35);
  }

  /* BOUTON PLAY */
  .btn-play {
    width: 65px;
    height: 65px;
    border-radius: 50%;
    background: rgba(255,255,255,0.95);
    border: none;
    cursor: pointer;
    position: relative;
    transition: all 0.3s;
  }

  .btn-play:hover {
    transform: scale(1.1);
    background: white;
  }

  .btn-play::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-40%, -50%);
    width: 0;
    height: 0;
    border-left: 18px solid #333;
    border-top: 12px solid transparent;
    border-bottom: 12px solid transparent;
  }

  /* BOUTONS NAVIGATION */
  .btn-prev,
  .btn-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: white;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 12px rgba(0,0,0,0.15);
    z-index: 10;
    transition: all 0.3s;
  }

  .btn-prev:hover,
  .btn-next:hover {
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 4px 18px rgba(0,0,0,0.2);
  }

  .btn-prev { left: 0; }
  .btn-next { right: 0; }

  .btn-prev svg,
  .btn-next svg {
    color: #333;
  }

  /* MODAL */
  .video-modal-ceralyne {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.95);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .video-modal-ceralyne.active {
    display: flex;
  }

  .modal-box {
    position: relative;
    max-width: 90%;
    max-height: 90vh;
  }

  .modal-player {
    max-width: 100%;
    max-height: 90vh;
    border-radius: 12px;
  }

  .btn-close {
    position: absolute;
    top: -50px;
    right: 0;
    background: white;
    border: none;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 26px;
    font-weight: 300;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s;
  }

  .btn-close:hover {
    transform: scale(1.1);
  }

  /* ðŸ“± MOBILE - DIMENSIONS EXACTES CERALYNE */
  @media (max-width: 768px) {
    .video-carousel-ceralyne {
      padding: 28px 0;
    }

    .title-ceralyne {
      font-size: 20px;
      margin-bottom: 22px;
    }

    .carousel-box {
      padding: 0 32px;
    }

    /* ðŸŽ¯ DIMENSIONS EXACTES CERALYNE MOBILE */
    .video-item {
      min-width: 190px;
      max-width: 190px;
      height: 300px;
      border-radius: 12px;
    }

    .carousel-track {
      gap: 10px;
      padding: 5px 0;
    }

    .btn-prev,
    .btn-next {
      width: 36px;
      height: 36px;
    }

    .btn-prev svg,
    .btn-next svg {
      width: 8px;
      height: 13px;
    }

    .btn-play {
      width: 52px;
      height: 52px;
    }

    .btn-play::after {
      border-left: 15px solid #333;
      border-top: 10px solid transparent;
      border-bottom: 10px solid transparent;
    }

    .video-item:active {
      transform: scale(0.97);
    }

    .btn-close {
      top: -45px;
      width: 38px;
      height: 38px;
      font-size: 22px;
    }
  }

  /* Petits mobiles */
  @media (max-width: 400px) {
    .carousel-box {
      padding: 0 25px;
    }

    .video-item {
      min-width: 170px;
      max-width: 170px;
      height: 270px;
    }

    .btn-prev,
    .btn-next {
      width: 32px;
      height: 32px;
    }
  }

  /* Tablettes */
  @media (min-width: 769px) and (max-width: 1024px) {
    .video-item {
      min-width: 230px;
      max-width: 230px;
      height: 360px;
    }
  }
</style>

<script>
  // Scroll du carrousel
  function scrollCarousel(sectionId, direction) {
    const track = document.getElementById('track-' + sectionId);
    const isMobile = window.innerWidth <= 768;
    const distance = isMobile ? 200 : 300;
    
    track.scrollLeft += (direction === 'next' ? distance : -distance);
  }

  // Ouvrir modal
  function openModal(sectionId, index) {
    const modal = document.getElementById('modal-' + sectionId);
    const player = document.getElementById('player-' + sectionId);
    const videos = document.querySelectorAll(`[data-section="${sectionId}"] video[data-index]`);
    
    if (videos[index]) {
      const src = videos[index].querySelector('source').src;
      player.querySelector('source').src = src;
      player.load();
      modal.classList.add('active');
      player.play().catch(e => console.log('Autoplay:', e));
      document.body.style.overflow = 'hidden';
    }
  }

  // Fermer modal
  function closeModal(sectionId) {
    const modal = document.getElementById('modal-' + sectionId);
    const player = document.getElementById('player-' + sectionId);
    
    modal.classList.remove('active');
    player.pause();
    player.currentTime = 0;
    document.body.style.overflow = '';
  }

  // Setup listeners
  document.addEventListener('DOMContentLoaded', function() {
    // Fermer modal au clic sur fond
    document.querySelectorAll('.video-modal-ceralyne').forEach(modal => {
      modal.addEventListener('click', function(e) {
        if (e.target === this) {
          const sectionId = this.getAttribute('data-section');
          closeModal(sectionId);
        }
      });
    });

    // Fermer avec Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const active = document.querySelector('.video-modal-ceralyne.active');
        if (active) closeModal(active.getAttribute('data-section'));
      }
    });

    // Preview hover (desktop uniquement)
    if (window.innerWidth > 768) {
      document.querySelectorAll('.video-item').forEach(item => {
        const video = item.querySelector('video');
        if (video) {
          item.addEventListener('mouseenter', () => {
            video.play().catch(() => {});
          });
          item.addEventListener('mouseleave', () => {
            video.pause();
            video.currentTime = 0;
          });
        }
      });
    }

    // Swipe mobile
    document.querySelectorAll('.carousel-track').forEach(track => {
      let startX, scrollLeft, isDragging = false;
      
      track.addEventListener('touchstart', (e) => {
        isDragging = true;
        startX = e.touches[0].pageX - track.offsetLeft;
        scrollLeft = track.scrollLeft;
      });
      
      track.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        e.preventDefault();
        const x = e.touches[0].pageX - track.offsetLeft;
        const walk = (x - startX) * 1.5;
        track.scrollLeft = scrollLeft - walk;
      });
      
      track.addEventListener('touchend', () => {
        isDragging = false;
      });
    });
  });
</script>

