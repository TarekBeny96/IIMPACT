<div class="videoslider" data-section-id="{{ section.id }}">
  <div class="videoslider-wrap">
    {% if section.settings.title != blank %}
      <h2 class="videoslider-title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="videoslider-container">
      <button class="videoslider-prev" type="button" onclick="slideVideo('{{ section.id }}', 'prev')">
        <svg width="10" height="16" viewBox="0 0 10 16" fill="none" aria-hidden="true">
          <path d="M8 2L2 8L8 14" stroke="#333" stroke-width="2"/>
        </svg>
      </button>
      
      <div class="videoslider-scroll" id="scroll-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="videoslider-card">
            {% if block.settings.video != blank %}
              <video muted loop playsinline preload="metadata" data-vid="{{ forloop.index0 }}" data-sec="{{ section.id }}">
                <source src="{{ block.settings.video }}" type="video/mp4">
              </video>
            {% elsif block.settings.video_url != blank %}
              <video muted loop playsinline preload="metadata" data-vid="{{ forloop.index0 }}" data-sec="{{ section.id }}">
                <source src="{{ block.settings.video_url }}" type="video/mp4">
              </video>
            {% else %}
              <div class="videoslider-placeholder">
                <svg width="50" height="50" viewBox="0 0 50 50" aria-hidden="true">
                  <circle cx="25" cy="25" r="23" fill="#ddd"/>
                  <path d="M20 15L35 25L20 35V15Z" fill="#999"/>
                </svg>
              </div>
            {% endif %}
            
            <div class="videoslider-overlay" role="button" tabindex="0"
                 onclick="openVideoModal('{{ section.id }}', {{ forloop.index0 }})"
                 onkeydown="if(event.key==='Enter'||event.key===' ') openVideoModal('{{ section.id }}', {{ forloop.index0 }})">
              <div class="videoslider-playbtn"></div>
            </div>
          </div>
        {% endfor %}
      </div>

      <button class="videoslider-next" type="button" onclick="slideVideo('{{ section.id }}', 'next')">
        <svg width="10" height="16" viewBox="0 0 10 16" fill="none" aria-hidden="true">
          <path d="M2 2L8 8L2 14" stroke="#333" stroke-width="2"/>
        </svg>
      </button>
    </div>
  </div>
</div>

