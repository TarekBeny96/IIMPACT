  Hero #32 - Version Simple et √âpur√©e
  Compatible avec Impact 6.4.1
  Shopify OS 2.0
{% endcomment %}

<section class="hero-32-simple" data-section-id="{{ section.id }}">
  <div class="hero-32-simple__container">
    <div class="hero-32-simple__image-wrapper">
      
      {%- comment -%} Image de fond {%- endcomment -%}
      {%- if section.settings.image != blank -%}
        {%- assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio | round -%}
        {{ section.settings.image | image_url: width: 1920 | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: image_height,
          sizes: '100vw',
          widths: '375, 550, 750, 1100, 1500, 1780, 1920',
          class: 'hero-32-simple__image'
        }}
      {%- else -%}
        <div class="hero-32-simple__placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-32-simple__placeholder-svg' }}
        </div>
      {%- endif -%}
      
      {%- comment -%} Overlay avec contenu {%- endcomment -%}
      <div class="hero-32-simple__overlay" style="background: {{ section.settings.overlay_gradient }};">
        <div class="hero-32-simple__content" style="text-align: {{ section.settings.text_alignment }};">
          
          {%- comment -%} Rating {%- endcomment -%}
          {%- if section.settings.show_rating -%}
            <div class="hero-32-simple__rating">
              <div class="hero-32-simple__stars">
                {%- for i in (1..5) -%}
                  <svg class="hero-32-simple__star" width="18" height="18" viewBox="0 0 16 16" fill="none">
                    <path d="M8 0L9.79611 5.52786H15.6085L10.9062 8.94427L12.7023 14.4721L8 11.0557L3.29772 14.4721L5.09383 8.94427L0.391548 5.52786H6.20389L8 0Z" fill="{{ section.settings.star_color }}"/>
                  </svg>
                {%- endfor -%}
              </div>
              {%- if section.settings.rating_text != blank -%}
                <span class="hero-32-simple__rating-text">{{ section.settings.rating_text }}</span>
              {%- endif -%}
            </div>
          {%- endif -%}
          
          {%- comment -%} Titre principal {%- endcomment -%}
          {%- if section.settings.heading != blank -%}
            <{{ section.settings.heading_tag }} class="hero-32-simple__heading" style="color: {{ section.settings.heading_color }};">
              {{ section.settings.heading }}
            </{{ section.settings.heading_tag }}>
          {%- endif -%}
          
          {%- comment -%} Sous-titre {%- endcomment -%}
          {%- if section.settings.subheading != blank -%}
            <p class="hero-32-simple__subheading" style="color: {{ section.settings.subheading_color }};">
              {{ section.settings.subheading }}
            </p>
          {%- endif -%}
          
          {%- comment -%} Liste de features {%- endcomment -%}
          {%- if section.blocks.size > 0 -%}
            <ul class="hero-32-simple__features">
              {%- for block in section.blocks -%}
                {%- if block.type == 'feature' -%}
                  <li class="hero-32-simple__feature" {{ block.shopify_attributes }}>
                    <svg class="hero-32-simple__checkmark" width="22" height="22" viewBox="0 0 20 20" fill="none">
                      <circle cx="10" cy="10" r="10" fill="{{ section.settings.checkmark_bg }}"/>
                      <path d="M6 10L9 13L14 7" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span style="color: {{ section.settings.feature_text_color }};">{{ block.settings.text }}</span>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
          
          {%- comment -%} Boutons CTA {%- endcomment -%}
          {%- if section.settings.button_label != blank or section.settings.button_label_2 != blank -%}
            <div class="hero-32-simple__buttons">
              
              {%- if section.settings.button_label != blank -%}
                <a 
                  href="{{ section.settings.button_link | default: '#' }}" 
                  class="hero-32-simple__button hero-32-simple__button--primary"
                  style="background-color: {{ section.settings.button_bg }}; color: {{ section.settings.button_text_color }};"
                >
                  {{ section.settings.button_label }}
                </a>
              {%- endif -%}
              
              {%- if section.settings.button_label_2 != blank -%}
                <a 
                  href="{{ section.settings.button_link_2 | default: '#' }}" 
                  class="hero-32-simple__button hero-32-simple__button--secondary"
                  style="background-color: {{ section.settings.button_bg_2 }}; color: {{ section.settings.button_text_color_2 }}; border-color: {{ section.settings.button_text_color_2 }};"
                >
                  {{ section.settings.button_label_2 }}
                </a>
              {%- endif -%}
              
            </div>
          {%- endif -%}
          
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
  .hero-32-simple {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .hero-32-simple__container {
    width: 100%;
    margin: 0 auto;
  }

  .hero-32-simple__image-wrapper {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.section_height_desktop }}px;
  }

  .hero-32-simple__image,
  .hero-32-simple__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-32-simple__placeholder {
    background: #f0f0f0;
  }

  .hero-32-simple__placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.2;
  }

  /* Overlay */
  .hero-32-simple__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
  }

  .hero-32-simple__content {
    max-width: {{ section.settings.content_width }}px;
    width: 100%;
  }

  /* Rating */
  .hero-32-simple__rating {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 24px;
    background: rgba(0, 0, 0, 0.4);
    padding: 8px 16px;
    border-radius: 24px;
    backdrop-filter: blur(10px);
  }

  .hero-32-simple__stars {
    display: flex;
    gap: 4px;
  }

  .hero-32-simple__star {
    width: 18px;
    height: 18px;
  }

  .hero-32-simple__rating-text {
    font-size: 14px;
    font-weight: 600;
    color: white;
  }

  /* Heading */
  .hero-32-simple__heading {
    font-size: clamp(36px, 6vw, {{ section.settings.heading_size }}px);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 20px 0;
    letter-spacing: -0.02em;
  }

  /* Subheading */
  .hero-32-simple__subheading {
    font-size: clamp(16px, 2vw, {{ section.settings.subheading_size }}px);
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 32px 0;
    opacity: 0.95;
  }

  /* Features list */
  .hero-32-simple__features {
    list-style: none;
    padding: 0;
    margin: 0 0 40px 0;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .hero-32-simple__feature {
    display: flex;
    align-items: center;
    gap: 14px;
    font-size: clamp(15px, 1.5vw, 18px);
    font-weight: 500;
  }

  .hero-32-simple__checkmark {
    flex-shrink: 0;
  }

  /* Buttons */
  .hero-32-simple__buttons {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .hero-32-simple__button {
    display: inline-block;
    padding: 16px 36px;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 30px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .hero-32-simple__button--primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
  }

  .hero-32-simple__button--secondary {
    background: transparent !important;
  }

  .hero-32-simple__button--secondary:hover {
    background-color: rgba(255, 255, 255, 0.1) !important;
    transform: translateY(-3px);
  }

  /* RESPONSIVE - TABLETTE */
  @media screen and (max-width: 1024px) {
    .hero-32-simple__image-wrapper {
      min-height: {{ section.settings.section_height_tablet }}px;
    }

    .hero-32-simple__overlay {
      padding: 30px;
    }

    .hero-32-simple__heading {
      font-size: 42px;
    }

    .hero-32-simple__subheading {
      font-size: 18px;
    }
  }

  /* RESPONSIVE - MOBILE */
  @media screen and (max-width: 768px) {
    .hero-32-simple__image-wrapper {
      min-height: {{ section.settings.section_height_mobile }}px;
    }

    .hero-32-simple__overlay {
      padding: 24px 20px;
      align-items: {{ section.settings.mobile_alignment }};
    }

    .hero-32-simple__content {
      text-align: {{ section.settings.mobile_text_alignment }};
    }

    .hero-32-simple__rating {
      margin-bottom: 20px;
      padding: 6px 12px;
    }

    .hero-32-simple__star {
      width: 14px;
      height: 14px;
    }

    .hero-32-simple__rating-text {
      font-size: 12px;
    }

    .hero-32-simple__heading {
      font-size: 32px;
      margin-bottom: 16px;
    }

    .hero-32-simple__subheading {
      font-size: 16px;
      margin-bottom: 24px;
    }

    .hero-32-simple__features {
      margin-bottom: 32px;
      gap: 12px;
    }

    .hero-32-simple__feature {
      font-size: 15px;
      gap: 12px;
    }

    .hero-32-simple__checkmark {
      width: 18px;
      height: 18px;
    }

    .hero-32-simple__buttons {
      flex-direction: column;
      width: 100%;
    }

    .hero-32-simple__button {
      width: 100%;
      text-align: center;
      padding: 14px 28px;
      font-size: 13px;
    }
  }

  @media screen and (max-width: 480px) {
    .hero-32-simple__heading {
      font-size: 28px;
    }

    .hero-32-simple__subheading {
      font-size: 15px;
    }
  }
</style>

